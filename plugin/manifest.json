{
    "name": "Figma IDE Bridge",
    "id": "figma-ide-bridge-plugin",
    "api": "1.0.0",
    "main": "dist/controller.js",
    "ui": "dist/ui.html",
    "editorType": [
        "figma"
    ],
    "permissions": [
        "teamlibrary"
    ],
    "networkAccess": {
        "allowedDomains": [
            "ws://localhost:9000",
            "https://fonts.googleapis.com",
            "https://fonts.gstatic.com"
        ],
        "reasoning": "Required to connect to local MCP server via WebSocket and load fonts"
    }
}